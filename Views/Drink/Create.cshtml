@model Drink

<h1 class="mt-4">Dodaj Nowy Drink</h1>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Nazwa"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <input asp-for="Opis" class="form-control" />
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cena"></label>
        <input type="number" asp-for="Cena" class="form-control" />
        <span asp-validation-for="Cena" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="KategoriaId">Kategorie</label>
        <select asp-for="KategoriaId" class="form-control" asp-items="ViewBag.Kategorie">
            <option value="">-- Wybierz kategorie --</option>
        </select>
        <span asp-validation-for="KategoriaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a class="btn btn-secondary" asp-action="Index">Powr√≥t</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
