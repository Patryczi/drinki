@model IEnumerable<Drink>

<h1 class="mt-4">Lista Drinków</h1>

<table class="table table-bordered table-striped mt-3">
    <thead class="thead-light">
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drink in Model)
        {
            <tr>
                <td>@drink.Nazwa</td>
                <td>@drink.Opis</td>
                <td>@drink.Cena</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@drink.DrinkId">Edytuj</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@drink.DrinkId">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Dodaj Nowy Drink</a>
