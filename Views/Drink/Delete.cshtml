@model Drink

<h1 class="mt-4">Usuń Drink</h1>

<h4>Jesteś pewny, że chcesz usunąć ten drink?</h4>
<dl class="row">
    <dt class="col-sm-2">Nazwa</dt>
    <dd class="col-sm-10">@Model.Nazwa</dd>
    <dt class="col-sm-2">Opis</dt>
    <dd class="col-sm-10">@Model.Opis</dd>
</dl>

<form asp-action="DeleteDrink" method="post" class="mt-3">
    <input type="hidden" asp-for="DrinkId" />
    <input type="hidden" asp-for="Nazwa" />
    <input type="hidden" asp-for="Opis" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" asp-action="Index">Powrót</a>
</form>
