@model IEnumerable<Kategoria>

<h1 class="mt-4">Lista Kategorii</h1>

<table class="table table-bordered table-striped mt-3">
    <thead class="thead-light">
        <tr>
            <th>Nazwa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategoria in Model)
        {
            <tr>
                <td>@kategoria.Nazwa</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Dodaj Nową Kategorię</a>
